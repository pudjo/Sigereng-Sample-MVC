@model Catagory
<form method="post" asp-action="Delete">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control" />
                    <label asp-for="Name" disable class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control" />
                    <label asp-for="DisplayOrder" disable class="ms-2"></label>
                    
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit"  class="btn btn-primary form-control">Delete</button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Catagory" asp-action="Index" class="btn btn-secondary" style="width:150px">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}